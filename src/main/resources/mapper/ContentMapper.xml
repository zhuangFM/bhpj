<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.netease.fimi.bhpj.repository.ContentMapper">
    <resultMap id="content-query" type="com.netease.fimi.bhpj.domain.Content">
        <id property="id" column="id"/>
        <result property="title" column="title"/>
        <result property="contain" column="contain"/>
        <result property="imagePath" column="image_path"/>
        <result property="summary" column="summary"/>
        <result property="detail" column="detail"/>
        <result property="price" column="price"/>
        <result property="departure" column="departure"/>
    </resultMap>

    <insert id="addContent" useGeneratedKeys="true" keyColumn="id" keyProperty="id">
        INSERT INTO tbl_content (`title`,`contain`,`image_path`,`summary`,`detail`,`price`,`departure`) VALUES (#{title},#{contain},#{imagePath},#{summary},#{detail},#{price},#{departure})
    </insert>

    <update id="modifyContentById">
        UPDATE tbl_content
        <trim prefix="set" suffixOverrides=",">
            <if test="null != title">`title`=#{title},</if>
            <if test="null != contain">`contain`=#{contain},</if>
            <if test="null != imagePath">`image_path`=#{imagePath},</if>
            <if test="null != summary">`summary`=#{summary},</if>
            <if test="null != detail">`detail`=#{detail},</if>
            <if test="null != price">`price`=#{price},</if>
            <if test="null != departure">`departure`=#{departure},</if>
        </trim>
        WHERE `id`=#{id}
    </update>

    <select id="getContentById" resultMap="content-query">
        SELECT * FROM tbl_content WHERE id=#{id}
    </select>

    <select id="getAllContentList" resultMap="content-query">
        SELECT * FROM tbl_content
    </select>

    <delete id="deleteContentById">
        DELETE FROM tbl_content WHERE id=#{id}
    </delete>


</mapper>
